{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [ "**/images/**", "images/**", "**/Documents/**", "Documents/**", "**/pdf/**", "pdf/**"]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "",
      "_enableSearch": true,
      "pdf": true,
      "pdfCoverPage":"./pdf/cover.html",
      "pdfFooterTemplate": "./pdf/footer.html"

    }
  }
}